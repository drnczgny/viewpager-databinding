<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.adrian.mymvvmexample.jpcomment.view.CommentsActivity">

    <data>

        <variable
            name="viewModel"
            type="com.adrian.viewpagerdatabinding.viewmodel.comment.CommentsViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.simpleText}"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:listItemLayout="@{viewModel.layoutId}"
            app:listItems="@{viewModel.commentItemViewModels}"
            app:variableId="@{viewModel.variableId}" />

    </LinearLayout>

</layout>
